@{
  Layout = "_Layout";
}

<h2>Edit Item: @Model.GetDescription()</h2>
<form action="/items/@Model.GetId()/update" method="post">
    <label for="name">Name:</label>
    <input type="text" name="newname" value="@Model.GetDescription()">
    <button type="submit">Update</button>
</form>
<h4><a href="/items">Return home</a></h4>
